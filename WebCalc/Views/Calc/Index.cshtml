@model WebCalc.Models.CalcModel
@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>CalcModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.X, new { htmlAttributes = new { @class = "form-control", @style = "width:70px;" } })
                @Html.DropDownList("Operation", Model.Operations, new { htmlAttributes = new { @class = "form-control", @style = "width:100px;" } })
                @Html.EditorFor(model => model.Y, new { htmlAttributes = new { @class = "form-control", @style = "width:70px;" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Calculate" class="btn btn-default" />
                @Html.DisplayFor(model => model.Result)
            </div>
        </div>
    </div>
}

<div>
    @Html.Partial("MiniHistory", Model)
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
